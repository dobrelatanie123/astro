---
import Layout from "../../layouts/Layout.astro";
import type { Claim } from "../../db/database.types";

const { supabase, user } = Astro.locals;
const { claimId } = Astro.params;

const { data: claim, error } = await supabase
  .from("claims")
  .select("*")
  .eq("claim_id", claimId)
  .single();

// Track view for logged-in users
if (user && claim) {
  // Check if view exists
  const { data: existingView } = await supabase
    .from("user_claim_views")
    .select("id, seen_count")
    .eq("user_id", user.id)
    .eq("claim_id", claimId)
    .single();
  
  if (existingView) {
    // Update existing view
    await supabase
      .from("user_claim_views")
      .update({
        last_seen_at: new Date().toISOString(),
        seen_count: (existingView.seen_count || 1) + 1
      })
      .eq("id", existingView.id);
  } else {
    // Insert new view
    await supabase
      .from("user_claim_views")
      .insert({
        user_id: user.id,
        claim_id: claimId,
        source: 'dashboard'
      });
  }
}

// Score-based color gradient
const getScoreColor = (score: number | null) => {
  if (score === null) return { bg: "from-slate-600 to-slate-700", text: "text-slate-300" };
  if (score >= 70) return { bg: "from-emerald-500 to-green-600", text: "text-emerald-100" };
  if (score >= 30) return { bg: "from-lime-500 to-emerald-500", text: "text-lime-100" };
  if (score > -30) return { bg: "from-amber-500 to-yellow-500", text: "text-amber-100" };
  if (score > -70) return { bg: "from-orange-500 to-red-500", text: "text-orange-100" };
  return { bg: "from-red-600 to-rose-700", text: "text-red-100" };
};

const getScoreLabel = (score: number | null) => {
  if (score === null) return "No Score";
  if (score >= 70) return "Strongly Verified";
  if (score >= 30) return "Partially Supported";
  if (score > -30) return "Inconclusive";
  if (score > -70) return "Partially Contradicted";
  return "Strongly Refuted";
};

// Generate fallback explanation when DB explanation is missing
const getAnalysisText = (claim: any) => {
  if (claim.verification_explanation && 
      !claim.verification_explanation.toLowerCase().includes('no relevant academic papers')) {
    return claim.verification_explanation;
  }
  
  // Generate based on score and paper data
  const score = claim.verification_score;
  const paperTitle = claim.paper_title;
  const author = claim.author_normalized || claim.author_mentioned;
  
  if (score === null && !paperTitle) {
    return null; // No data to generate from
  }
  
  if (paperTitle && score !== null) {
    if (score >= 70) {
      return `The claim is strongly supported by the paper "${paperTitle}". The key findings in the study align closely with what was stated in the video${author ? ` regarding ${author}'s research` : ''}.`;
    } else if (score >= 30) {
      return `The claim is partially supported by "${paperTitle}". While the paper addresses the topic, some specific details may differ from the claim.`;
    } else if (score > -30) {
      return `The evidence from "${paperTitle}" is inconclusive regarding this claim. The paper touches on related topics but doesn't directly confirm or refute the specific claim.`;
    } else if (score > -70) {
      return `The claim is partially contradicted by "${paperTitle}". Some findings in the paper differ from what was stated.`;
    } else {
      return `The claim is strongly contradicted by "${paperTitle}". The paper's findings conflict with the claim made in the video.`;
    }
  }
  
  return null;
};

const analysisText = claim ? getAnalysisText(claim) : null;

const formatTimestamp = (ts: string) => ts || "0:00";

const videoId = claim?.video_id?.replace('yt-', '') || null;

const youtubeUrl = videoId 
  ? `https://www.youtube.com/watch?v=${videoId}&t=${parseTimestamp(claim?.timestamp)}s`
  : null;

const thumbnailUrl = videoId
  ? `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg`
  : null;

function parseTimestamp(ts: string): number {
  if (!ts) return 0;
  const parts = ts.split(':').map(Number);
  if (parts.length === 2) return parts[0] * 60 + parts[1];
  if (parts.length === 3) return parts[0] * 3600 + parts[1] * 60 + parts[2];
  return 0;
}

// Calculate gauge position (0-100%)
const score = claim?.verification_score ?? null;
const gaugePosition = score !== null ? ((score + 100) / 200) * 100 : 50;
const scoreColors = getScoreColor(score);
---

<Layout title={claim ? `Claim: ${claim.finding_summary?.slice(0, 50)}...` : "Claim Not Found"}>
  <div class="min-h-screen bg-slate-950 text-slate-100 py-12 px-4">
    <div class="max-w-4xl mx-auto">
      
      <!-- Back button -->
      <a href="/claims" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-8 transition-colors">
        <span>â†</span>
